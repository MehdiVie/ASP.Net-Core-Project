@model IEnumerable<Statement>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">      
                    Statements List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Statement" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Statement
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tilte</th>
                    <th>Language</th>
                    <th>Type</th>
                    <th>Created_Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.Language</td>
                        <td>@obj.Type</td>
                        <td>@obj.Created_Date</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Statement" asp-action="Update" asp-route-statementId="@obj.StatementId"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Statement" asp-action="Delete" asp-route-statementId="@obj.StatementId"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                }
            </tbody>
        </table>
    </div>
</div>

