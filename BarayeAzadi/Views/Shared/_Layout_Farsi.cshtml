<!DOCTYPE html>
<html lang="fa"  data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - گروه برای آزادی</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css"
          integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/Spinner.css" />
    <link href="//cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" rel="stylesheet">


</head>
<body>
    <header>
        
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow ">
            
            <div class="container-fluid ">

                <a class="navbar-brand pull-right order-sm-last ms-2" asp-area="">
                    <img src="~/Static_Files/Images/logo.png" alt="logo" style="width:100px;" />
                </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                     <ul class="navbar-nav  flex-nowrap">
                        

                        <partial name="_LoginPartial_Farsi" />
                     </ul>
                    <ul class="navbar-nav ms-auto flex-nowrap">
                        
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Contactus" asp-action="Index">Messages</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Contactus" asp-action="Create">ارتباط با ما</a>
                            </li>
                        }
                        <li class="nav-item ">
                            <a class="nav-link " asp-area="" asp-controller="HomeFarsi" asp-action="Index">صفحه اصلی</a>
                        </li>
                    </ul>
                    
                </div>
                <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">
                    English
                    <img src="~/Static_Files/Images/lang-en.png" style="width:25px; height:17px; " />
                </a>


            </div>
        </nav>
        
        
    </header>

        <div class="container">
            <main role="main" class="pb-3">
                <partial name="_Notification" />
                @RenderBody()
            </main>
        </div>


    <footer class="border-top footer bg-dark text-muted mt-5">
        <div class="container text-center mb-3">
            Copyright © 2024 Baraye Azadi Group - All Rights Reserved.
        </div>
        <div class="d-flex justify-content-center">
            <div class="me-5">
                <a href="https://www.instagram.com/baraye_azadi_group_austria">
                    <img src="~/Static_Files/Images/Instagram_icon.png" style="height:50px;" alt="Instagram" />
                </a>
            </div>
            <div class="ms-5">
                <a href="https://t.me/baraye_azadi_group">
                    <img src="~/Static_Files/Images/Telegram_icon.png" style="height:50px;" alt="Telgram" />
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.0.0/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.unobtrusive-ajax.min.js"> </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
