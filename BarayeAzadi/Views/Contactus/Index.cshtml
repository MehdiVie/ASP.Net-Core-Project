@model IEnumerable<Contactus>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Messages(Contactus) List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Email</td>
                        <td>@obj.Phone</td>
                        <td>@obj.Created_Date</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Contactus" asp-action="Details" asp-route-contactusId="@obj.ContactusId"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Details
                                </a>
                                <a asp-controller="Contactus" asp-action="Delete" asp-route-contactusId="@obj.ContactusId"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

