@model Contactus

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Contact Us
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" enctype="multipart/form-data">

            <div class="p-3">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Email" class="form-control border shadow" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Phone" class="form-control border shadow" />
                    <label asp-for="Phone" class="ms-2"></label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <textarea asp-for="Message" style="min-height:200px; resize:none;" class="form-control border shadow"></textarea>
                    <label asp-for="Message" class="ms-2"></label>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="ImageUrl" type="hidden" class="form-control border shadow" />
                    <input asp-for="Image" class="form-control border shadow" />
                    <label asp-for="Image" class="ms-2"></label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class=" btn btn-success w-100">
                            Create Villa
                        </button>
                    </div>
                    <div class="col-6  col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-plus-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}